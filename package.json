{
  "name": "todo-kanban",
  "displayName": "Todo Kanban",
  "publisher": "Rememo",
  "description": "You often leave TODOs, FIXMEs, and other comments in your code? But managing these notes can quickly become overwhelming? Todo-Kanban allowing you to turn these comments into Kanban tasks on Rememo.io. Ideal for developers who want to maintain focus without leaving their editor.",
  "version": "0.0.8",
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "todo",
    "fixme",
    "highlight",
    "keyword",
    "annotation",
    "kanban",
    "task manager",
    "project management"
  ],
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Todo Kanban Settings",
      "properties": {
        "todoKanban.apiToken": {
          "type": "string",
          "default": "",
          "description": "The API token for authenticating with the backend."
        }
      }
    },
    "commands": [
      {
        "command": "tracker.createRememoTask",
        "title": "Create Task on rememo.io"
      },
      {
        "command": "tracker.editRememoTask",
        "title": "Edit Task on rememo.io"
      },
      {
        "command": "tracker.deleteRememoTask",
        "title": "Delete Task on rememo.io"
      }
    ]
  },
  "icon": "static/rememo-192.png",
  "repository": "https://github.com/rememo-io/todo-kanban",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "tests": "mocha --require ts-node/register ./src/suite/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.17",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.1",
    "chai": "^5.1.1",
    "eslint": "^8.57.0",
    "mocha": "^10.7.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}